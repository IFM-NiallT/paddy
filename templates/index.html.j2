<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PADDY Categories</title>
   
    <!-- External Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Liter:wght@400;700&display=swap" rel="stylesheet">
   
    <!-- Our Custom Stylesheet -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/paddy.css') }}">
</head>
<body>
    <!-- Navbar HTML -->
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid px-4">
            <div class="nav-brand-container d-flex align-items-center">
                <img src="/static/img/ifm_logo.png" alt="IFM logo" class="logo me-2" id="ifmLogo">
                <a class="navbar-brand" href="#" id="paddyText">PADDY</a>
                <h3> v0.3</h3>
            </div>
            <div class="d-flex gap-2">
                <button id="toggleCategoryDetails" class="btn-uni">
                    Toggle Category Details
                </button>
                <button id="searchAllProducts" class="btn-uni">
                    Search All Products
                </button>
            </div>
        </div>
    </nav>

    <!-- Search Modal -->
    <div class="modal fade" id="searchProductsModal" tabindex="-1" aria-labelledby="searchProductsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="searchProductsModalLabel">Search Products</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Search Form -->
                    <div class="search-wrapper mb-4">
                        <input type="text" class="search-input" id="modalProductSearch" placeholder="Search products by code or description...">
                    </div>

                    <!-- View Toggle -->
                    <ul class="nav nav-tabs" id="viewTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="card-tab" data-bs-toggle="tab" data-bs-target="#card-view" type="button" role="tab">
                                Card View
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="table-tab" data-bs-toggle="tab" data-bs-target="#table-view" type="button" role="tab">
                                Table View
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content mt-3" id="viewTabsContent">
                        <!-- Card View -->
                        <div class="tab-pane fade show active" id="card-view" role="tabpanel">
                            <div class="product-card-grid" id="productCardGrid">
                                <!-- Cards will be populated here -->
                            </div>
                        </div>

                        <!-- Table View -->
                        <div class="tab-pane fade" id="table-view" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table" id="modalProductsTable">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Description</th>
                                            <th>Category</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="modalProductResultsBody">
                                        <!-- Results will be populated here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search Bar Container -->
    <div class="search-bar-container">
        <div class="search-controls">
            <!-- Search input -->
            <div class="search-wrapper flex-grow-1" id="categorySearchWrapper">
                <input type="text" class="search-input" id="categorySearch" placeholder="Search categories...">
            </div>
            
            <!-- Dropdowns side by side -->
            <div class="dropdown-container">
                <select class="form-select btn-uni" id="sortSelect">
                    <option value="" disabled selected>Sort By</option>
                    <option value="alpha-asc">A - Z</option>
                    <option value="alpha-desc">Z - A</option>
                    <option value="code-asc">Code Ascending</option>
                    <option value="code-desc">Code Descending</option>
                </select>

                <select class="form-select btn-uni ms-2" id="columnSelect">
                    <option value="auto" selected>Auto Columns</option>
                    <option value="1">1 Column</option>
                    <option value="2">2 Columns</option>
                    <option value="3">3 Columns</option>
                    <option value="4">4 Columns</option>
                    <option value="5">5 Columns</option>
                    <option value="6">6 Columns</option>
                    <option value="7">7 Columns</option>
                    <option value="8">8 Columns</option>
                    <option value="9">9 Columns</option>
                    <option value="10">10 Columns</option>
                </select>
            </div>
        </div>
    </div>

    <main class="container-fluid px-4">
        <!-- Categories View -->
        <div id="category-grid">
            {% for category in categories.Data %}
                <div class="category-item">
                    <div class="category-container">
                        <div class="category-content">
                            <div class="category-image">
                                <img src="{{ url_for('static', filename='img/categories/' ~ category.ID ~ '_' ~ category.Description.lower().replace(' ', '_') ~ '.jpg') }}" 
                                     alt="{{ category.Description }}"
                                     onerror="this.src='{{ url_for('static', filename='img/categories/404_default.jpg') }}'"
                                     class="category-img">
                            </div>
                            <div class="category-text">
                                <div class="category-name" title="{{ category.Description }}" data-code="{{ category.Code }}">
                                    {{ category.Description }}
                                </div>
                                <div class="category-details" style="display: none;">
                                    <div class="category-code">Code: {{ category.Code }}</div>
                                </div>
                            </div>
                            <div class="category-button">
                                <button class="btn-uni" onclick="window.location.href='/products/{{ category.ID }}'">
                                    View Products
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <!-- Products View -->
        <div id="productSearchResults" style="display: none;">
            <div class="view-header">
                <h2 class="view-title">All Products</h2>
                <button class="back-button" onclick="toggleSearchMode(false)">
                    ‚Üê Back to Categories
                </button>
            </div>
            
            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-bordered" id="productsTable">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="productResultsBody">
                            <!-- Results will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <p>PADDY &copy; 2025 - IFM</p>
        <p class="quote">"Product Attribute Designer Deployment (for) You"</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ url_for('static', filename='js/categories.js') }}"></script>
</body>
</html>