<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PADDY - Product Categories | IFM</title>
    
    <!-- Critical Meta Tags -->
    <meta name="description" content="PADDY: Product Attribute Designer Deployment for efficient product management and category browsing">
    <meta name="keywords" content="product management, inventory, categories, IFM, product attributes">
    <meta name="author" content="IFM">
    
    <!-- Preload Critical Resources -->
    <link rel="preload" href="{{ url_for('static', filename='img/ifm_logo.png') }}" as="image">
    
    <!-- External Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" media="all">
    <link href="https://fonts.googleapis.com/css2?family=Liter:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/main.css') }}">
    
    <!-- No-JS Fallback -->
    <noscript>
        <style>
            .js-required { display: none; }
            .no-js-message { display: block; }
        </style>
    </noscript>
</head>
<body>
    <!-- Accessibility Message for No JavaScript -->
    <div class="no-js-message text-center bg-warning p-3" style="display:none;">
        JavaScript is required for full functionality. Please enable JavaScript in your browser.
    </div>

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg" aria-label="Main Navigation">
            <div class="container-fluid px-4">
                <div class="nav-brand-container d-flex align-items-center">
                    <img 
                        src="{{ url_for('static', filename='img/ifm_logo.png') }}" 
                        alt="IFM logo" 
                        class="logo me-2" 
                        id="ifmLogo"
                        loading="lazy"
                    >
                    <a 
                        class="navbar-brand" 
                        href="#" 
                        id="paddyText" 
                        aria-label="PADDY Home"
                    >
                        PADDY
                    </a>
                </div>
                <div class="d-flex gap-2">
                    <button 
                        id="searchAllProducts" 
                        class="btn-uni" 
                        data-bs-toggle="modal" 
                        data-bs-target="#searchProductsModal"
                    >
                        Search All Products
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <!-- Search Modal -->
<div 
  class="modal fade" 
  id="searchProductsModal" 
  tabindex="-1" 
  aria-labelledby="searchProductsModalLabel" 
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="searchProductsModalLabel">Search Products</h5>
        <button 
          type="button" 
          class="btn-close" 
          data-bs-dismiss="modal" 
          aria-label="Close Search Modal"
        ></button>
      </div>
      <div class="modal-body">
        <div class="search-container mb-4">
          <div class="search-wrapper">
            <label for="modalProductSearch" class="visually-hidden">
              Search products by code or description
            </label>
            <input 
              type="text" 
              class="search-input" 
              id="modalProductSearch" 
              placeholder="Search products by code or description..."
            >
          </div>
        </div>

        <div class="table-responsive">
          <table class="table" id="modalProductsTable">
            <thead>
              <tr>
                <th>Code</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="modalProductResultsBody">
              <!-- Results will be populated dynamically -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

    <!-- Edit Product Popup Form -->
    <div class="form-popup-overlay" id="editFormOverlay"></div>
    <div class="form-popup" id="editProductForm" role="dialog" aria-labelledby="editFormTitle" aria-modal="true">
        <form class="form-container" id="editProductFormContainer">
            <div class="form-header">
                <h2 id="editFormTitle">
                    Edit Product: <span id="popupProductCode"></span>
                </h2>
                <button type="button" class="close-button cancel" onclick="closeEditForm()" aria-label="Close edit form">X</button>
            </div>
            
            <input type="hidden" id="popupProductId" name="product_id">
            
            <div class="form-content">
                <div id="errorContainer" class="alert alert-destructive" style="display: none;" role="alert">
                    <div class="alert-content"></div>
                </div>
                <div id="successContainer" class="alert alert-success" style="display: none;" role="alert">
                    <div class="alert-content"></div>
                </div>
                
                <div class="form-grid" style="display: flex; gap: 20px;">
                    <!-- Left Column: Static Fields -->
                    <div class="form-column" style="flex: 1;">
                        <!-- Product Name (Now a Display Field) -->
                        <div class="form-group">
                            <label for="popupProductName">Product Name</label>
                            <small id="productNameHelp" class="form-text text-muted">Display name (from product description)</small>
                            <div id="popupProductName" class="form-control readonly-input" aria-describedby="productNameHelp"></div>
                        </div>
                        <div class="form-group">
                            <label for="popupExtendedDescription">Extended Description</label>
                            <small id="extendedDescriptionHelp" class="form-text text-muted">Additional product details</small>
                            <textarea
                                id="popupExtendedDescription"
                                name="extended_description"
                                class="form-control"
                                rows="4"
                                aria-describedby="extendedDescriptionHelp"
                            ></textarea>
                        </div>
                        <div class="form-group">
                            <label for="popupImageCount">Image Count</label>
                            <small id="imageCountHelp" class="form-text text-muted">Total number of images for this product</small>
                            <input
                                type="text"
                                id="popupImageCount"
                                name="ImageCount"
                                readonly
                                class="form-control readonly-input"
                                aria-describedby="imageCountHelp"
                            >
                        </div>
                        <div class="form-group">
                            <label for="popupWebCategory">Web Category</label>
                            <small id="webCategoryHelp" class="form-text text-muted">Category for web display</small>
                            <input
                                type="text"
                                id="popupWebCategory"
                                name="D_WebCategory"
                                class="form-control"
                                aria-describedby="webCategoryHelp"
                            >
                        </div>
                        <div class="form-group">
                            <label for="popupWebStatus">Web Status <span class="required">*</span></label>
                            <small id="webStatusHelp" class="form-text text-muted">Determines product visibility on the website</small>
                            <select
                                id="popupWebStatus"
                                name="web_status"
                                class="form-control"
                                required
                                aria-describedby="webStatusHelp"
                            >
                                <option value="">Select Status</option>
                                <option value="Available">Available</option>
                                <option value="Not Available">Not Available</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Right Column: Dynamic Fields -->
                    <div class="form-column" style="flex: 1;">
                        <div id="popupFirstColumn"></div>
                        <div id="popupSecondColumn"></div>
                    </div>
                </div>
            </div>
            
            <div class="form-actions">
                <button
                    type="button"
                    class="btn-cancel cancel"
                    onclick="closeEditForm()"
                    aria-label="Cancel edit"
                >
                    Cancel
                </button>
                <button
                    type="submit"
                    class="btn-submit"
                    aria-label="Save product changes"
                >
                    Save Changes
                </button>
            </div>
        </form>
    </div>

    <!-- Search Bar Container -->
    <div class="search-bar-container">
        <div class="search-controls">
            <!-- Search input -->
            <div class="search-wrapper flex-grow-1" id="categorySearchWrapper">
                <input type="text" class="search-input" id="categorySearch" placeholder="Search categories...">
            </div>
            
            <!-- Dropdowns side by side -->
            <div class="dropdown-container">
                <select class="form-select btn-uni" id="sortSelect">
                    <option value="" disabled selected>Sort By</option>
                    <option value="alpha-asc">A - Z</option>
                    <option value="alpha-desc">Z - A</option>
                    <option value="code-asc">Code Asc</option>
                    <option value="code-desc">Code Desc</option>
                </select>
            </div>
        </div>
    </div>

    <main class="container-fluid px-4">
        <!-- Categories View -->
        <div id="category-grid">
            {% for category in categories.Data %}
                <div class="category-item">
                    <div class="category-container">
                        <div class="category-content">
                            <div class="category-image">
                                <img src="{{ url_for('static', filename='img/categories/' ~ category.ID ~ '_' ~ category.Description.lower().replace(' ', '_') ~ '.jpg') }}" 
                                     alt="{{ category.Description }}"
                                     onerror="this.src='{{ url_for('static', filename='img/categories/404_default.jpg') }}'"
                                     class="category-img">
                            </div>
                            <div class="category-text">
                                <div class="category-name" title="{{ category.Description }}" data-code="{{ category.Code }}">
                                    {{ category.Description }}
                                </div>
                                <div class="category-details" style="display: flex;">
                                    <div class="category-code">Code: {{ category.Code }}</div>
                                </div>
                            </div>
                            <div class="category-button">
                                <button 
                                    class="btn-uni" 
                                    onclick="window.location.href='/products/{{ category.ID }}'"
                                    aria-label="View Products in {{ category.Description }} Category"
                                >
                                    View Products
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>

    <!-- Footer -->
    <footer role="contentinfo">
        <p>PADDY &copy; 2025 - IFM</p>
        <p class="quote">"Product Attribute Designer Deployment (for) You"</p>
    </footer>
    <p class="version-quote">"v0.4"</p>

    <!-- Success Popup -->
    <div id="successPopup" class="success-popup">
        <span class="success-icon">âœ“</span>
        <span class="success-content">Operation completed successfully</span>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Important: Load products.js before categories.js -->
    <script src="{{ url_for('static', filename='js/products.js') }}"></script>
    <script src="{{ url_for('static', filename='js/categories.js') }}"></script>
</body>
</html>